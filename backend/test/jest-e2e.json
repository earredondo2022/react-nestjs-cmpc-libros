{
  "displayName": "E2E Tests",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "../src/**/*.(t|j)s",
    "!../src/**/*.d.ts",
    "!../src/**/node_modules/**",
    "!../src/**/migrations/**",
    "!../src/**/config/**",
    "!../src/main.ts",
    "!../src/**/*.interface.ts",
    "!../src/**/*.enum.ts",
    "!../src/**/*.dto.ts"
  ],
  "coverageDirectory": "../coverage-e2e",
  "coverageReporters": [
    "text",
    "lcov",
    "html",
    "json"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "setupFilesAfterEnv": ["./setup.ts"],
  "moduleNameMapping": {
    "^@/(.*)$": "../src/$1"
  }
}